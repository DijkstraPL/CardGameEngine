<prism:PrismApplication x:Class="CardGame_Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CardGame_Client"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:conv ="clr-namespace:CardGame_Client.Converters"
             xmlns:vm="clr-namespace:CardGame_Client.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <conv:ReverseBoolConverter x:Key="ReverseBoolConverter"/>
                    <conv:BoolToVisibleConverter x:Key="BoolToVisibleConverter"/>
                </ResourceDictionary> 
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
